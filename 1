#include <stdio.h>

struct Pessoa {
    char nome[50];
    int idade;
    float altura;
};

int main() {
    struct Pessoa pessoa;

    printf("Digite o nome do inquilino: ");
    scanf("%s", pessoa.nome);

    printf("Digite a idade do inquilino: ");
    scanf("%d", &pessoa.idade);

    printf("Digite a altura do inquilino em metros : ");
    scanf("%f", &pessoa.altura);

    printf("\nDados da pessoa:\n");
    printf("Nome: %s\n", pessoa.nome);
    printf("Idade: %d\n", pessoa.idade);
    printf("Altura: %.2f\n", pessoa.altura);

    return 0;
}
